<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="NUMBER OF ROOMS:"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/No_of_rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Room"
        android:layout_alignLeft="@id/Room"
        android:layout_alignRight="@id/Room"

        android:ems="10"
        android:inputType="number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next"
        android:text="NEXT"
        android:textSize="20sp"
        android:layout_below="@id/No_of_rooms"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/ID_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="ENTER ID NUMBERS:"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/ID_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ID_msg"
        android:layout_alignLeft="@id/ID_msg"
        android:layout_alignRight="@id/ID_msg"
        android:ems="10"
        android:inputType="text"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/ID_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ID_1"
        android:layout_alignLeft="@id/ID_msg"
        android:layout_alignRight="@id/ID_msg"
        android:ems="10"
        android:inputType="text"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/ID_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ID_2"
        android:layout_alignLeft="@id/ID_msg"
        android:layout_alignRight="@id/ID_msg"
        android:ems="10"
        android:inputType="text"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/ID_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ID_3"
        android:layout_alignLeft="@id/ID_msg"
        android:layout_alignRight="@id/ID_msg"
        android:ems="10"
        android:inputType="text"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/ID_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ID_4"
        android:layout_alignLeft="@id/ID_msg"
        android:layout_alignRight="@id/ID_msg"
        android:ems="10"
        android:inputType="text"
        android:visibility="invisible"/>



</RelativeLayout>